@{
    ViewData["Title"] = "Equipamento";
}

<link href="~/css/equipment.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<div class="row">
    <div class="col-3">
        <button type="button" class="btn btn-success" id="insert-event">Insert</button>
        <table class="table table-hover" id="bodyTabela">
            <thead>
                <tr>
                    <th><h4>ID</h4></th>
                    <th><h4>Equipamento</h4></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>



<div class="modal modalLatLng fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle">Dados do Equipamento</h4>
            </div>
            <input type="hidden" id="id">
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="col-5">
                        <h4>Tipo:</h4>
                    </div>
                    <div class="col-7">
                        <input id="type" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="col-5">
                        <h4>Número:</h4>
                    </div>
                    <div class="col-7">
                        <input id="equipNumber" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="cancel-event" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="form-event"></button>
                <button type="button" class="btn btn-danger" id="remove-event">Remove</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/equipment.js"></script>

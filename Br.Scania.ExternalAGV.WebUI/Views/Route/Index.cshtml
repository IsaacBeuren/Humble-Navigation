<div class="row">
    <div class="col-3" style="border:solid;height:650px;">
        <button type="button" class="btn btn-success" id="insert-event">Insert</button>
        <table class="table table-hover" id="bodyTabela">
            <thead>
                <tr>
                    <th><h4>Rota</h4></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="col-4" style="border:solid">
        <table class="table table-hover" id="bodyTabelaConfig">
            <thead>
                <tr>
                    <th><h4>Descrição</h4></th>
                    @*<th><h4>Latitude</h4></th>
                        <th><h4>Longitude</h4></th>*@
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="col-5" style="border:solid">
        <div>
            <h4 id="routeName">Selecionar Rota</h4>
        </div>
        <table class="table table-hover" id="bodyTabelaRoute">
            <thead>
                <tr>
                    <th><h4>Descrição</h4></th>
                    @*<th><h4>Latitude</h4></th>
                        <th><h4>Longitude</h4></th>*@
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div id="button-update"></div>
    </div>
</div>

<div class="modal modalLatLng fade" tabindex="-1" role="dialog" id="modalInsert">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle"></h4>
            </div>
            <input type="hidden" id="id">
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="col-5">
                        <h4 id="modalContent">@*Descrição:*@</h4>
                        <br>
                        <h4 id="modalContent2">@*Descrição:*@</h4>
                    </div>
                    <div class="col-7">
                        @*<input id="equipNumber" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">*@
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="cancel-event" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="form-event"></button>
                <button type="button" class="btn btn-danger" id="remove-event">Remove</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

